# Samsara API Configuration
SAMSARA_API_BASE=https://api.samsara.com/v1
SAMSARA_API_TOKEN=your_samsara_token_here

# ============================================================================
# LANGFUSE OBSERVABILITY
# ============================================================================
# Langfuse connection (self-hosted)
LANGFUSE_PUBLIC_KEY=pk-lf-...
LANGFUSE_SECRET_KEY=sk-lf-...
LANGFUSE_HOST=http://langfuse-web:3000


# OpenAI Configuration (usado vía LiteLLM en ADK)
OPENAI_API_KEY=your_openai_api_key_here

# Service Configuration
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8000

# ============================================================================
# TWILIO CONFIGURATION
# ============================================================================
# Get these from https://console.twilio.com
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here

# Phone numbers (E.164 format, e.g., +15551234567)
TWILIO_PHONE_NUMBER=+15551234567
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# Laravel callback URL for voice calls
TWILIO_CALLBACK_URL=https://your-domain.com/api/webhooks/twilio

MAX_CONCURRENT_REQUESTS=5      # Máximo de peticiones en paralelo
SEMAPHORE_TIMEOUT=30.0         # Timeout para adquirir slot
RATE_LIMITING_ENABLED=true 